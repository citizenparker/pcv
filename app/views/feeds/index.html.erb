<h1>Listing feeds</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Url</th>
    <th>Description</th>
  </tr>

<% @feeds.each do |feed| %>
  <tr>
    <td><%=h feed.name %></td>
    <td><%=h feed.url %></td>
    <td><%=h feed.description %></td>
    <td><%= link_to 'Show', feed_path(feed) %></td>
    <td><%= link_to 'Edit', edit_feed_path(feed) %></td>
    <td><%= link_to 'Destroy', edit_feed_path(feed), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New feed', new_feed_path %>
