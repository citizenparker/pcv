<% content_for :header %>Listing mixes<% end %>

<table>
  <tr>
    <th>Name</th>
  </tr>

<% @mixes.each do |mix| %>
  <tr>
    <td><%=h mix.name %></td>
    <td><%= link_to 'Show', mix %></td>
    <td><%= link_to 'Edit', edit_mix_path(mix) %></td>
    <td><%= link_to 'Destroy', mix, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New mix', new_mix_path %>
